---
const { platform, url} = Astro.props;
---

{/* MAILTO */}
{platform=="mail" && 
  <a href={url} class="fa fa-envelope"></a>
}

{/* GITHUB */}
{platform=="github" && 
  <a href={url} class="fa fa-github" target="_blank"></a>
}

{/* NOTION */}
{platform=="notion" && 
  <a href={url} class="fa notion" id="notion" target="_blank">
    <iconify-icon icon="simple-icons:notion"></iconify-icon>
  </a>
}

<style>
    #notion {
      font-size: 16px;
      width: 17px;
    } 
    a {
      color: white;
      background-color: var(--color-theme);
      text-decoration: none;
    }
    .fa-github, .fa-envelope, .notion {
        background: var(--color-theme);
        color: white;
    }
    .fa {
        padding: 10px;
        font-size: 19px;
        width: 19px;
        text-align: center;
        text-decoration: none;
        margin: 5px 2px;
        border-radius: 50%;
    }
    .fa:hover, .notion:hover {
        background:  var(--color-theme);
        color: black;
    }
</style>