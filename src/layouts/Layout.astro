---
interface Props {
	title: string;
}
const { title } = Astro.props;
import Navigation from '../components/Navigation.astro';

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/black-heart-pixel.jpeg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<header>
	</header>
	<nav>
		<Navigation />
	</nav>
	<body>
		<slot />
	</body>
	<footer>
	</footer>
</html>

<style is:global>


	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		/* font-family: system-ui, sans-serif; */
		background: white;
		background-size: 224px;
	}
	body {
	margin: 0;
	padding: 0;
	display: table;
	width: 100%;
	height: 100vh;
	margin: 0;
	background: white;
	font-family: 'Fira Sans', sans-serif;
	font-size: 20px;
	font-weight: 300;
	color: black;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	h2 {
		font-size: 2rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: black;
		font-size: 20px;
		line-height: 1.6;
	}
